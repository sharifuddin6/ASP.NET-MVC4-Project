@model Project.ViewModels.Product.ProductViewModel

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">
    var fragment = window.location.hash;
    $(document).ready(function() {
        if (fragment === "#content-1") {
            $(".main-content").hide();
        } else if (fragment === "#content-2") {
            $(".abstract").hide();
        }
    });
</script>

@{
    if (Model.Product != null)
    {
        Html.RenderPartial("_product", Model.Product);
    }
    else
    {
        Html.RenderPartial("_noproduct");
    }
}
