@model Project.ViewModels.Customer.CustomerViewModel
@{
    ViewBag.Title = "List model";
}

<legend>Available customers</legend>
<table class="table all-customers" style="width:400px">
    <tbody>
        <tr>
            <th>Id</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
        </tr>
        @foreach (var item in Model.Customers)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
            </tr>
        }
    </tbody>
</table>

